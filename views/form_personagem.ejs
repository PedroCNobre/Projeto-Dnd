<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= formTitle %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/personagens">Personagens</a></li>
        <li><a href="/racas">Raças</a></li>
        <li><a href="/classes">Classes</a></li>
        <li><a href="/armas">Armas</a></li>
        <li><a href="/armaduras">Armaduras</a></li>
        <li><a href="/magias">Magias</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <h1><%= formTitle %></h1>
    <form action="<%= formAction %>" method="POST">
      <% if (item) { %>
        <input type="hidden" name="_method" value="PUT">
      <% } %>
      <label for="nome">Nome:</label>
      <input type="text" id="nome" name="nome" value="<%= item ? item.nome : '' %>" required>
      
      <label for="raca">Raça:</label>
      <select id="raca" name="raca" required>
        <% racas.forEach(function(raca) { %>
          <option value="<%= raca._id %>" <%= item && item.raca && item.raca._id.toString() === raca._id.toString() ? 'selected' : '' %>><%= raca.nome %></option>
        <% }) %>
      </select>
      
      <label for="classe">Classe:</label>
      <select id="classe" name="classe" required>
        <% classes.forEach(function(classe) { %>
          <option value="<%= classe._id %>" <%= item && item.classe && item.classe._id.toString() === classe._id.toString() ? 'selected' : '' %>><%= classe.nome %></option>
        <% }) %>
      </select>
      
      <label for="nivel">Nível:</label>
      <input type="number" id="nivel" name="nivel" value="<%= item ? item.nivel : '' %>" required>
      
      <label for="pontosVida">Pontos de Vida:</label>
      <input type="number" id="pontosVida" name="pontosVida" value="<%= item ? item.pontosVida : '' %>" required>
      
      <label for="armadura">Armadura:</label>
      <select id="armadura" name="armadura" required>
        <% armaduras.forEach(function(armadura) { %>
          <option value="<%= armadura._id %>" <%= item && item.armadura && item.armadura._id.toString() === armadura._id.toString() ? 'selected' : '' %>><%= armadura.nome %></option>
        <% }) %>
      </select>
      
      <label for="armas">Armas:</label>
      <select id="armas" name="armas" multiple>
        <% armas.forEach(function(arma) { %>
          <option value="<%= arma._id %>" <%= item && item.armas && item.armas.some(a => a._id.toString() === arma._id.toString()) ? 'selected' : '' %>><%= arma.nome %></option>
        <% }) %>
      </select>
      
      <label for="magias">Magias:</label>
      <select id="magias" name="magias" multiple>
        <% magias.forEach(function(magia) { %>
          <option value="<%= magia._id %>" <%= item && item.magias && item.magias.some(m => m._id.toString() === magia._id.toString()) ? 'selected' : '' %>><%= magia.nome %></option>
        <% }) %>
      </select>
      
      <button type="submit">Salvar</button>
    </form>

    <% if (item) { %>
      <form action="<%= formAction %>?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit">Excluir</button>
      </form>
    <% } %>
  </main>
  <footer>
    <p>&copy; 2024 Criador de Personagens DnD</p>
  </footer>
</body>
</html>
