<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= formTitle %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/personagens">Personagens</a></li>
        <li><a href="/racas">Raças</a></li>
        <li><a href="/classes">Classes</a></li>
        <li><a href="/armas">Armas</a></li>
        <li><a href="/armaduras">Armaduras</a></li>
        <li><a href="/magias">Magias</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <h2>
      <%= formTitle %>
    </h2>

    <div class="container-xl">
    <form class="row g-3" action="<%= formAction %>" method="POST">
      <div class="col-md-6">
        <label for="formGroupExampleInput2" class="form-label" for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= item ? item.nome : '' %>" required>
      </div>
      <div class="col-md-6">
        <label for="formGroupExampleInput2" class="form-label" for="raca">Raça</label>
        <select class="form-select" aria-label="Default select example id=" raca" name="raca" required">
          <% racas.forEach(function(raca) { %>
            <option value="<%= raca._id %>" <%=item && item.raca && item.raca._id.toString()===raca._id.toString()
              ? 'selected' : '' %>><%= raca.nome %>
            </option>
            <% }) %>
        </select>
      </div>
      <div class="col-md-6">
        <label for="formGroupExampleInput2" class="form-label" for="classe">Classe</label>
        <select class="form-select" aria-label="Default select example" id="classe" name="classe" required>
          <% classes.forEach(function(classe) { %>
            <option value="<%= classe._id %>" <%=item && item.classe &&
              item.classe._id.toString()===classe._id.toString() ? 'selected' : '' %>><%= classe.nome %>
            </option>
            <% }) %>
        </select>
      </div>
      <div class="col-md-6">
        <label for="formGroupExampleInput2" class="form-label" for="nivel">Nivel</label>
        <input type="number" class="form-control" id="nivel" name="nivel" value="<%= item ? item.nivel : '' %>"
          required>
      </div>
      <div class="col-md-6">
        <label for="formGroupExampleInput2" class="form-label" for="pontosVida">Pontos de Vida</label>
        <input type="number" class="form-control" id="pontosVida" name="pontosVida"
          value="<%= item ? item.pontosVida : '' %>" required>
      </div>
      <div class="col-md-6">
        <label for="formGroupExampleInput2" class="form-label" for="armadura">Armadura</label>
        <select class="form-select" aria-label="Default select example" id="armadura" name="armadura" required>
          <% armaduras.forEach(function(armadura) { %>
            <option value="<%= armadura._id %>" <%=item && item.armadura &&
              item.armadura._id.toString()===armadura._id.toString() ? 'selected' : '' %>><%= armadura.nome %>
            </option>
            <% }) %>
        </select>
      </div>
      <div class="col-md-6">
        <label for="formGroupExampleInput2" class="form-label" for="armas">Armas</label>
        <select class="form-select" multiple aria-label="Multiple select example" id="armas" name="armas" multiple>
          <% armas.forEach(function(arma) { %>
            <option value="<%= arma._id %>" <%=item && item.armas && item.armas.some(a=> a._id.toString() ===
              arma._id.toString()) ? 'selected' : '' %>><%= arma.nome %>
            </option>
            <% }) %>
        </select>
      </div>
      <div class="col-md-6">
        <label for="formGroupExampleInput2" class="form-label" for="magias">Magias</label>
        <select class="form-select" multiple aria-label="Multiple select example" id="magias" name="magias" multiple>
          <% magias.forEach(function(magia) { %>
            <option value="<%= magia._id %>" <%=item && item.magias && item.magias.some(m=> m._id.toString() ===
              magia._id.toString()) ? 'selected' : '' %>><%= magia.nome %>
            </option>
            <% }) %>
        </select>
      </div>
      </div>
      <div class="row justify-content-evenly mt-3">
        <div class="col-auto">
          <button type="submit" class="btn btn-success"
            style="--bs-btn-padding-y: 5px; --bs-btn-padding-x: 25px; --bs-btn-font-size: 15pt;">Salvar</button>
        </div>
        <% if (item) { %>
          <div class="col-auto">
            <form action="<%= formAction %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger"
                style="--bs-btn-padding-y: 5px; --bs-btn-padding-x: 25px; --bs-btn-font-size: 15pt;">Excluir</button>
            </form>
          </div>
          <% } %>
      </div>
    </form>
  </div>

  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <footer>
    <p>&copy; 2024 Criador de Personagens DnD</p>
  </footer>
</body>

</html>