<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= formTitle %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg" style="background-color: #ec2127; ">
      <div class="container-fluid">
        <a href="/"><img src="https://i.imgur.com/1CPpuKT.png" alt="logo" style="height: 45px;"></a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/personagens"
                style="color: white;"><strong>Personagens</strong></a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/racas"
                style="color: white;"><strong>Raças</strong></a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/classes"
                style="color: white;"><strong>Classes</strong></a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/armas"
                style="color: white;"><strong>Armas</strong></a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/armaduras"
                style="color: white;"><strong>Armaduras</strong></a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/magias"
                style="color: white;"><strong>Magias</strong></a>
            </li>
        </div>
      </div>
    </nav>
  </header>
  <main class="content">
    <h1>
      <%= formTitle %>
    </h1>
    <form action="<%= formAction %>" method="POST">
      <% if (item) { %>
        <input type="hidden" name="_method" value="PUT">
        <% } %>
          <label for="nome">Nome:</label>
          <input type="text" id="nome" name="nome" value="<%= item ? item.nome : '' %>" required>

          <label for="raca">Raça:</label>
          <select id="raca" name="raca" required>
            <% racas.forEach(function(raca) { %>
              <option value="<%= raca._id %>" <%=item && item.raca && item.raca._id.toString()===raca._id.toString()
                ? 'selected' : '' %>><%= raca.nome %>
              </option>
              <% }) %>
          </select>

          <label for="classe">Classe:</label>
          <select id="classe" name="classe" required>
            <% classes.forEach(function(classe) { %>
              <option value="<%= classe._id %>" <%=item && item.classe &&
                item.classe._id.toString()===classe._id.toString() ? 'selected' : '' %>><%= classe.nome %>
              </option>
              <% }) %>
          </select>

          <label for="nivel">Nível:</label>
          <input type="number" id="nivel" name="nivel" value="<%= item ? item.nivel : '' %>" required>

          <label for="pontosVida">Pontos de Vida:</label>
          <input type="number" id="pontosVida" name="pontosVida" value="<%= item ? item.pontosVida : '' %>" required>

          <label for="armadura">Armadura:</label>
          <select id="armadura" name="armadura" required>
            <% armaduras.forEach(function(armadura) { %>
              <option value="<%= armadura._id %>" <%=item && item.armadura &&
                item.armadura._id.toString()===armadura._id.toString() ? 'selected' : '' %>><%= armadura.nome %>
              </option>
              <% }) %>
          </select>

          <label for="armas">Armas:</label>
          <select id="armas" name="armas" multiple>
            <% armas.forEach(function(arma) { %>
              <option value="<%= arma._id %>" <%=item && item.armas && item.armas.some(a=> a._id.toString() ===
                arma._id.toString()) ? 'selected' : '' %>><%= arma.nome %>
              </option>
              <% }) %>
          </select>

          <label for="magias">Magias:</label>
          <select id="magias" name="magias" multiple>
            <% magias.forEach(function(magia) { %>
              <option value="<%= magia._id %>" <%=item && item.magias && item.magias.some(m=> m._id.toString() ===
                magia._id.toString()) ? 'selected' : '' %>><%= magia.nome %>
              </option>
              <% }) %>
          </select>

          <button type="submit">Salvar</button>
    </form>

    <% if (item) { %>
      <form action="<%= formAction %>?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit">Excluir</button>
      </form>
      <% } %>
  </main>
  <footer class="footer container-fluid row g-1">
    <p class="text-center"><strong>&copy; 2024 Criador de Personagens DnD</strong></p>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>