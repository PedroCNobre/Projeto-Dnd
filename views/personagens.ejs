<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Personagens</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/personagens">Personagens</a></li>
        <li><a href="/racas">Raças</a></li>
        <li><a href="/classes">Classes</a></li>
        <li><a href="/armas">Armas</a></li>
        <li><a href="/armaduras">Armaduras</a></li>
        <li><a href="/magias">Magias</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <button onclick="history.back()">Voltar</button> 
    <h1>Lista de Personagens</h1>
    <ul>
      <% if (personagens.length > 0) { %>
        <% personagens.forEach(function(personagem) { %>
          <li>
            <h2><%= personagem.nome %></h2>
            <p>Raça: <%= personagem.raca.nome %></p>
            <p>Classe: <%= personagem.classe.nome %></p>
            <p>Nível: <%= personagem.nivel %></p>
            <p>Pontos de Vida: <%= personagem.pontosVida %></p>
            <p>Armadura: <%= personagem.armadura.nome %></p>
            <p>Armas: 
              <ul>
                <% personagem.armas.forEach(function(arma) { %>
                  <li><%= arma.nome %> (Dano: <%= arma.dano %>, Tipo: <%= arma.tipo %>)</li>
                <% }) %>
              </ul>
            </p>
            <p>Magias: 
              <ul>
                <% personagem.magias.forEach(function(magia) { %>
                  <li><%= magia.nome %> (Nível: <%= magia.nivel %>, Escola: <%= magia.escola %>)</li>
                <% }) %>
              </ul>
            </p>
            <a href="/personagens/edit/<%= personagem._id %>">Editar</a>
            <form action="/personagens/<%= personagem._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit">Excluir</button>
            </form>
          </li>
        <% }) %>
      <% } else { %>
        <li>Nenhum personagem encontrado.</li>
      <% } %>
    </ul>
    <a href="/personagens/new">Criar Novo Personagem</a>
  </main>
</body>
</html>
