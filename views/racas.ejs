</head>

<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/personagens">Personagens</a></li>
        <li><a href="/racas">Raças</a></li>
        <li><a href="/classes">Classes</a></li>
        <li><a href="/armas">Armas</a></li>
        <li><a href="/armaduras">Armaduras</a></li>
        <li><a href="/magias">Magias</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <h1><strong>Lista de Raças</strong></h1>
    <div class="row">
      <div class="col-auto">
        <button onclick="history.back()" class="btn btn-primary">Voltar</button>
      </div>
      <div class="col-auto me-auto">
        <a href="/racas/new" class="btn btn-success">Adicionar Nova Raça</a>
      </div>
    </div>

    <div class="accordion mt-3" id="accordionExample">
      <% if (racas.length> 0) { %>
        <% racas.forEach(function(raca, index) { %>
          <div class="accordion-item">
            <h2 class="accordion-header" id="heading<%= index %>">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
                <%= raca.nome %>
              </button>
            </h2>
            <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>">
              <div class="accordion-body">
                <p>
                  <%= raca.descricao %>
                </p>
                <p><strong>Força:</strong>
                  <%= raca.forca %>
                </p>
                <p><strong>Destreza:</strong>
                  <%= raca.destreza %>
                </p>
                <p><strong>Constituição:</strong>
                  <%= raca.constituicao %>
                </p>
                <p><strong>Inteligência:</strong>
                  <%= raca.inteligencia %>
                </p>
                <p><strong>Sabedoria:</strong>
                  <%= raca.sabedoria %>
                </p>
                <p><strong>Carisma:</strong>
                  <%= raca.carisma %>
                </p>
                <a href="/racas/edit/<%= raca._id %>" class="btn btn-primary">Editar</a>
                <form action="/racas/<%= raca._id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-danger">Deletar</button>
                </form>
              </div>
            </div>
          </div>
          <% }); %>
            <% } else { %>
              <li>Nenhuma raça encontrada.</li>
              <% } %>
    </div>
  </main>
