<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Classes</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/personagens">Personagens</a></li>
        <li><a href="/racas">Raças</a></li>
        <li><a href="/classes">Classes</a></li>
        <li><a href="/armas">Armas</a></li>
        <li><a href="/armaduras">Armaduras</a></li>
        <li><a href="/magias">Magias</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <button onclick="history.back()">Voltar</button> <!-- Botão de Voltar -->
    <h1>Lista de Classes</h1>
    <ul>
      <% if (classes.length > 0) { %>
        <% classes.forEach(function(classe) { %>
          <li>
            <h2><%= classe.nome %></h2>
            <p><%= classe.descricao %></p>
            <a href="/classes/edit/<%= classe._id %>">Editar</a>
            <form action="/classes/<%= classe._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit">Deletar</button>
            </form>
          </li>
        <% }); %>
      <% } else { %>
        <li>Nenhuma classe encontrada.</li>
      <% } %>
    </ul>
    <a href="/classes/new">Adicionar Nova Classe</a>
  </main>
  <footer>
    <p>&copy; 2024 Criador de Personagens DnD</p>
  </footer>
</body>
</html>
